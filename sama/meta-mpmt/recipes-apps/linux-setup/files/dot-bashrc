export LS_OPTIONS='--color=auto'
alias ls='ls $LS_OPTIONS'
alias ll='ls $LS_OPTIONS -l'
alias l='ls $LS_OPTIONS -lA'

# XC3SPROG
export XCDB=/etc/xvc-adaptive/devlist.txt
export CABLEDB=/etc/xc3sprog/cablelist.txt

# XVC
alias start_xvc='/usr/bin/xvcServer --driver FTDI --cfreq 15000000 --interface 2'

# GPIO
source /usr/bin/gpio.sh
